{
  "compilerOptions": {
    "target": "es5", //defines what sort of code ts generates, es5 because it's what most browsers currently UNDERSTANDS.
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDirs": ["dist/"],
    "baseUrl": ".",
    "listFiles": true,
    "allowJs": false,
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@stylesheets/*": [
        "assets/css/*"
      ],
      "@views/*": [
        "assets/html/*"
      ],
      "@images/*": [
        "assets/images/*"
      ],
      "@renderings/*": [
        "src/renderings/*"
      ],
      "@utilities/*": [
        "src/utilities/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
